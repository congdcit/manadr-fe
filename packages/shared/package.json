{
  "name": "@manadr/shared",
  "version": "1.0.0",
  "private": false,
  "description": "Shared utilities, types, and constants for Manadr applications",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "default": "./dist/constants/index.js"
    }
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@manadr/eslint-config": "*",
    "@manadr/typescript-config": "*",
    "@types/node": "^22.15.3",
    "eslint": "^9.31.0",
    "typescript": "5.8.2"
  }
}